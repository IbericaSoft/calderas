<Templates imagesBasePath="fck_template/images/">
	
	<Template title="Imagen y titulo" image="template1.gif">
		<Description>Una imagen alineada a la izquierda con titulo y texto.</Description>
		<Html>
			<![CDATA[
				<img style="MARGIN: 5px 5px" height="100" alt="" width="100" align="left"/>
				<h3>Titular aqui</h3>
				Escribe aqui tu texto...
			]]>
		</Html>
	</Template>
	
	<Template title="Imagen y titulo" image="template4.gif">
		<Description>Una imagen alineada a la derecha con titulo y texto.</Description>
		<Html>
			<![CDATA[
				<img style="MARGIN: 5px 5px" height="100" alt="" width="100" align="right"/>
				<h3>Titular aqui</h3>
				Escribe aqui tu texto...
			]]>
		</Html>
	</Template>
	
	<Template title="Imagen destacada" image="template5.gif">
		<Description>Una imagen superior destacada y debajo el texto</Description>
		<Html>
			<![CDATA[
				<table cellspacing="0" cellpadding="0" width="100%" border="0">
					<tbody>
						<tr>
							<td width="100%"><h3>Titular aqui</h3></td>
						</tr>
						<tr>	
							<td width="100%"><center><img style="MARGIN: 5px 5px" alt="" width="100%" align="middle"/></center></td>
						</tr>
						<tr>
							<td width="100%">Escribe aqui tu texto...</td>
						</tr>
					</tbody>
				</table>
				Aqui mas texto...
			]]>
		</Html>
	</Template>
	
</Templates>
